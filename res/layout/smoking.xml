<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:background="@drawable/bt6" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:background="@drawable/bt5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"

        android:background="@drawable/bt7"
      />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/textView1"
        android:background="@drawable/bt8" 
        android:text="Day"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
         android:background="@drawable/bt8" 
        android:text="Month" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/textView1"
            android:background="@drawable/bt8" 
        android:text="Year" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignLeft="@+id/button5"
          android:background="@drawable/bt8" 
        android:text="Year" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignLeft="@+id/button8"
        android:text="(in Rs /-)" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/button6"
        android:layout_marginTop="18dp"
        android:text="No. of cigrates smokes in a day ?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/button10"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bt8"
        android:text="Home" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="14dp"
        android:text="When did you/will you quite smoking ?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="32dp"
        android:text="When did you start smoking?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />



    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignRight="@+id/button10"
        android:layout_below="@+id/textView3"
        android:background="@drawable/bt8"
        android:text="0" />

    <Button
        android:id="@+id/button12"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/bt8"
        android:text="CALCULATE" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button9"
        android:layout_marginTop="13dp"
        android:text="Cost of each cigarette purchaged."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/bt8"
        android:text="cost" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:background="@drawable/bt8"
        android:text="Day" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/button9"
        android:background="@drawable/bt8"
        android:text="Month" />

</RelativeLayout>
</ScrollView>
